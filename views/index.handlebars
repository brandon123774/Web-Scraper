<div class="container-fluid">
    <div class=row>
        <div class="col-12">
            {{#if articles}}
            {{#each articles}}
                <div class="card w-90">
                    <div class="card-header text-white bg-primary">
                        <a href={{result.link}} target="_blank" class="text-white">
                            <h2>{{result.title}}</h2>
                        </a>
                    </div>
                    <div class="card-body">
                        {{!-- <p class="card-text">
                            {{result.summary}}
                        </p> --}}
                        <button id="{{_id}}" class="btn btn-primary save-btn">Save Article</button>
                    </div>
                </div>
            {{/each}}
            {{else}}
                <div class="card text-white bg-warning w-90 p-1">
                    <div class="card-body text-center">
                        No new articles to display.
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>
